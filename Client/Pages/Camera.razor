@page "/camera"
@using Microsoft.AspNetCore.SignalR.Client
@using VirtualStudio.Shared
@inject NavigationManager NavigationManager
@implements IAsyncDisposable

<h1>Camera</h1>

<p>Connection state: @connectionState</p>
<p>Last message: @lastMessage</p>


@code {
    private HubConnection hubConnection;
    private string connectionState = "Disconnected";
    private string lastMessage = "";

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += NavigationManager_LocationChanged;
        hubConnection = new HubConnectionBuilder()
        .WithUrl(NavigationManager.ToAbsoluteUri("/virtualstudio"))
        .Build();

        hubConnection.On<string>("ReceiveMessage", ReceiveMessage);

        await hubConnection.StartAsync();
        connectionState = hubConnection.State.ToString();
    }

    private async void NavigationManager_LocationChanged(object sender, LocationChangedEventArgs args)
    {
        if (args.Location != NavigationManager.Uri)
        {
            await DisposeAsync();
        }
    }

    public void ReceiveMessage(string message)
    {
        lastMessage = "message";
    }


    public async ValueTask DisposeAsync()
    {
        await hubConnection.DisposeAsync();
    }
}